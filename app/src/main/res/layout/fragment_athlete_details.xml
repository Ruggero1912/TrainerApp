<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.AthleteDetailsFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="40px">


        <TextView
            android:id="@+id/detailsFragmentAthleteName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="20dp"
            android:text="AthleteName"
            android:textSize="32sp" />

        <ImageView
            android:id="@+id/detailsFragmentActivityIcon"
            android:layout_width="61dp"
            android:layout_height="55dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/ic_speed_24" />

        <TextView
            android:id="@+id/detailsFragmentAthleteConnectionStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:text="connection status" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="20dp">

            <TextView
                android:id="@+id/detailsFragmentID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:text="ID"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/detailsFragmentAthleteLastSeen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:text="last seen"
                android:textStyle="bold" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="20dp">

        <TextView
            android:id="@+id/detailsFragmentSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_speed_24"
            android:drawablePadding="10dp"
            android:text="-1 km/h"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/detailsFragmentHeartRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:drawableLeft="@drawable/ic_heart_24"
            android:drawablePadding="10dp"
            android:text="HR" />
    </LinearLayout>

        <com.androidplot.xy.XYPlot
            android:id="@+id/plotHeartRate"
            style="@style/Theme.TrainerApp"
            android:layout_width="315dp"
            android:layout_height="183dp"
            android:layout_marginBottom="30dp"
            android:title="@string/heart_rate_series" />

        <com.androidplot.xy.XYPlot
            android:id="@+id/plotSpeed"
            style="@style/Theme.TrainerApp"
            android:layout_width="315dp"
            android:layout_height="189dp"
            android:title="@string/speed_series" />

    </LinearLayout>
    </ScrollView>

</FrameLayout>