<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.AthleteDetailsFragment">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="40px"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >
    <TextView
        android:id="@+id/detailsFragmentAthleteName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:gravity="center_horizontal"
        android:paddingTop="20dp"
        android:text="prova prova" />

    <ImageView
        android:id="@+id/detailsFragmentActivityIcon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/ic_speed_24"
        />
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="40px"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/detailsFragmentID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="fenomfoo"
            android:paddingHorizontal="30dp"
            android:textStyle="italic"/>
        <TextView
            android:id="@+id/detailsFragmentAthleteLastSeen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="last seen"
            android:paddingHorizontal="30dp"
            android:textStyle="bold"/>
    </LinearLayout>
        <TextView
            android:id="@+id/detailsFragmentSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-1 km/h"
            android:textStyle="italic"
            android:drawableLeft="@drawable/ic_speed_24"
            android:drawablePadding="10dp"
            />
        <TextView
            android:id="@+id/tvHeartRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_outline_security_24"
            android:drawablePadding="10dp"
            android:text="HR"
            />
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
    </LinearLayout>

</FrameLayout>